{
  "name": "@fabric/maki",
  "version": "0.3.0-dev",
  "description": "Framework for hand-rolling web applications.",
  "main": "index.js",
  "bin": {
    "maki": "scripts/maki.js"
  },
  "scripts": {
    "build:scripts": "webpack scripts/index.js",
    "build:ui": "cd components/semantic && gulp build && cp dist/semantic.js ../../assets/scripts/semantic.js && cp dist/semantic.css ../../assets/styles/semantic.css && cd ../..",
    "compile": "node scripts/build.js",
    "coverage": "nyc mocha tests",
    "start": "npm run compile && node examples/app.js",
    "test": "NODE_ENV=test mocha tests"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/FabricLabs/maki.git"
  },
  "keywords": [
    "api",
    "craftsman",
    "framework",
    "handroll",
    "maki",
    "p2p",
    "resources",
    "web",
    "webrtc",
    "websockets"
  ],
  "author": "Fabric Labs",
  "license": "MIT",
  "readmeFilename": "README.md",
  "gitHead": "22dbaa6e09ffb728b79cecf128f4694fe12d5661",
  "dependencies": {
    "@fabric/core": "FabricLabs/fabric#pruning",
    "@fabric/http": "FabricLabs/web#fabric-0.1.0-develop",
    "fomantic-ui": "^2.7.7"
  },
  "devDependencies": {
    "maki-cms-local": "0.0.1",
    "mocha": "^6.1.4",
    "serviceworker-webpack-plugin": "^1.0.1",
    "webpack": "^4.39.1",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-cli": "^3.3.6"
  },
  "nyc": {
    "all": true,
    "include": [
      "types/**/*.js"
    ],
    "exclude": [
      "tests",
      "input"
    ],
    "report-dir": "./reports/code-coverage"
  }
}
